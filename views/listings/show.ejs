<%- layout('/layouts/boilerplate') -%>

<body>
  <div class="container mt-4">

    <!-- Title -->
    <div class="row">
      <div class="col-12 text-center">
        <h3><b><%= listing.title %></b></h3>
      </div>
    </div>

    <!-- Listing Card -->
    <div class="row justify-content-center mt-3">
      <div class="col-lg-7 col-md-8 col-sm-10">
        <div class="card listing-card ">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
          <div class="card-body">
            <p class="card-text">Owned by <%= listing.owner.username %></p>
            <p class="card-text">Category: <%= listing.category %></p>
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit/Delete Buttons -->
    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="row justify-content-center mt-3">
        <div class="col-lg-7 col-md-8 col-sm-10 d-flex gap-2">
          <a class="btn btn-dark " href="/listings/<%= listing.id %>/edit">Edit</a>
          <form action="/listings/<%= listing.id %>?_method=delete" method="post" class="flex-grow-1">
            <button class="btn btn-danger ">Delete</button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Map -->
    <div class="row justify-content-center mt-4">
      <div class="col-lg-7 col-md-8 col-sm-10">
        <div id="map" style="height: 300px;" class="rounded shadow-sm"></div>
      </div>
    </div>

    <!-- Review Form -->
    <div class="row justify-content-center mt-4">
      <div class="col-lg-7 col-md-10 col-sm-12">
        <% if (currUser) { %>
        <form action="/listings/<%= listing.id %>/review" method="post" novalidate class="needs-validation">
          <h3 class="mb-3">Leave a Review</h3>

          <!-- Rating -->
          <fieldset class="starability-slot mb-3">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
            <input type="radio" id="rate1" name="review[rating]" value="1" /><label for="rate1">1 star.</label>
            <input type="radio" id="rate2" name="review[rating]" value="2" /><label for="rate2">2 stars.</label>
            <input type="radio" id="rate3" name="review[rating]" value="3" /><label for="rate3">3 stars.</label>
            <input type="radio" id="rate4" name="review[rating]" value="4" /><label for="rate4">4 stars.</label>
            <input type="radio" id="rate5" name="review[rating]" value="5" /><label for="rate5">5 stars.</label>
            <span class="starability-focus-ring"></span>
          </fieldset>

          <!-- Comment -->
          <div class="mb-3">
            <label for="review[comment]" class="form-label">Comment</label>
            <textarea name="review[comment]" class="form-control" rows="3" required></textarea>
            <div class="invalid-feedback">Please add some comment for review</div>
          </div>

          <button class="btn btn-secondary">Submit</button>
        </form>
        <% } %>
      </div>
    </div>

    <!-- All Reviews -->
    <div class="row justify-content-center mt-4 mb-3">
      <div class="col-lg-7 col-md-10 col-sm-12">
        <h4 class="mb-3">All Reviews</h4>
        <div class="row">
          <% for(review of listing.reviews) { %>
          <div class="col-md-6 col-sm-12 mb-3">
            <div class="card p-3 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <h6 class="card-text"><%= review.comment %></h6>
                <p class="starability-result card-text" data-rating=<%= review.rating %>></p>
                <form action="/listings/<%= listing.id %>/review/<%= review.id %>?_method=DELETE" method="post">
                  <button class="btn btn-dark btn-sm mt-2">Delete</button>
                </form>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>

  </div>

  <!-- Leaflet CSS -->
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin="" />

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""></script>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      async function getCoordinates(locationString) {
        const apiUrl = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(locationString)}`;
        try {
          const response = await fetch(apiUrl);
          const data = await response.json();
          if (data.length > 0) {
            const lat = data[0].lat;
            const lon = data[0].lon;
            var map = L.map('map').setView([lat, lon], 15);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
              maxZoom: 19,
              attribution: '&copy; OpenStreetMap'
            }).addTo(map);

            var marker = L.marker([lat, lon]).addTo(map);
            marker.bindPopup("I am here").openPopup();
          }
        } catch (error) {
          console.error("Error during geocoding:", error);
        }
      }
      let url = "<%= url %>";
      getCoordinates(url);
    });
  </script>
</body>
