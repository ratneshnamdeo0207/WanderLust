<% layout('/layouts/boilerplate') -%>
<body>
    
<div class="row mt-3">

    <div class="col-6 offset-3">

        <h2>Signup on Wanderlust</h2>

          <form id="f" action="/signup" method="post" novalidate class="needs-validation">   

            <div class="mt-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" id="username" name="username" class="form-control" required>
            </div>     

            <div class="mt-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" name="email" class="form-control" required>
            </div>     

            <div class="mt-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="password" class="form-control" required>
            </div>     
            
            <div class="mt-3">
              <button class="btn btn-success ">Submit</button>
            </div>     

          </form>
      </div>
</div>
<script>

let f = document.querySelector("form");

f.addEventListener("submit", (req, res) => {
  e.preventDefault(); // prevent auto-submit for testing
  console.log("submitted");

  let password = f[2].value;
  let result = zxcvbn(password); // <-- no require needed

  if (result.score >= 2) { // 0=weak, 4=strong
    console.log("True (Medium or Strong)");
  } else {
    alert("Password too weak! Please use uppercase, lowercase, numbers, and symbols.");
      
    
  }
});
</script>
